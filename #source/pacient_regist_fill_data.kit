<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Innovative Medtech</title>
    <link rel="shortcut icon" href="img/icons/favicon.svg" />
    <link rel="stylesheet" href="lips/fontawesome/all.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />

    <link rel="stylesheet" href="css/slick.css" />
    <link rel="stylesheet" href="css/swiper-bundle.min.css" />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <!-- @import "registration_header.html" -->

    <div class="registration">
      <div class="container">
        <div class="registration__container dots">
          <div class="registration__dots">
            <div class="registration__dots__block">
              <ul>
                <li>
                  <a href="registration_role.html" class="dots__item">•</a>
                </li>
                <li>
                  <a
                    href="pacient_regist_fill_data.html"
                    class="dots__item active"
                    >•</a
                  >
                </li>
                <li><a href="" class="dots__item">•</a></li>
              </ul>
            </div>
          </div>
          <div class="registration__left">
            <a href="index.html" class="regitration__logo">
              <img src="img/logos/header/Header_Logo_Medtech.svg" alt="" />
            </a>
            <!-- <p class="create___acc">Создание аккаунта для пациента</p> -->
            <form action="" class="registration__form role">
              <div class="registration__form__content">
                <p class="create___acc">Создание аккаунта для пациента</p>
                <h3 class="registration__form__title add_margin">
                  Заполните ваши данные
                </h3>
                <div class="buttons__block">
                  <div class="custom__placeholder">
                    <p class="placeholder__text">Введите ваш e-mail</p>
                    <input class="custom__input" required type="email" />
                  </div>
                  <div class="custom__placeholder">
                    <p class="placeholder__text">Придумайте пароль</p>
                    <input
                      id="password_input"
                      class="custom__input"
                      required
                      type="password"
                    />
                    <div
                      class="eye__icon"
                      onclick="return show_hide_password(this);"
                    >
                      <img
                        src="img/icons/registration/eye_show.svg"
                        alt=""
                        class="img"
                      />
                    </div>

                    <input
                      required
                      type="password"
                      placeholder="Введите пароль"
                    />
                    <a href="" class="next__link">
                      <img
                        class="eye__img"
                        src="img/icons/registration/arrow__down.svg"
                        alt=""
                      />
                      Дальше</a
                    >
                  </div>
                </div>
              </div>
            </form>
          </div>
          <div class="registration__right">
            <div class="img">
              <img src="img/registration__page/surgery.jpg" alt="" />
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="js/jq/jquery.js"></script>
    <script src="js/slick.min.js"></script>
    <script src="js/swiper-bundle.min.js"></script>
    <script src="js/script.js"></script>
  </body>
</html>
