<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Innovative Medtech</title>
    <link rel="shortcut icon" href="img/icons/favicon.svg" />
    <link rel="stylesheet" href="lips/fontawesome/all.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />

    <link rel="stylesheet" href="css/slick.css" />
    <link rel="stylesheet" href="css/swiper-bundle.min.css" />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <!-- @import "registration_header.html" -->

    <div class="registration">
      <div class="container">
        <div class="registration__container">
          <div class="left">
            <a href="" class="back__btn"> Назад </a>
            <div class="left__block">
              <a target="__blank" class="registration__logo" href="index.html">
                <img src="img/logos/header/Header_Logo_Medtech.svg" alt=""
              /></a>

              <div class="registration__content">
                <h3 class="registration__title">Войдите в личный кабинет</h3>
                <div class="link">
                  <p>или</p>
                  <a href="">создайте новый</a>
                </div>
                <form action="" class="registration__form">
                  <label for="">
                    <p class="placeholder_text">Введите Ваш e-mail</p>
                    <input required class="email" type="email"
                  /></label>

                  <input
                    required
                    placeholder="Введите пароль"
                    class="password"
                    type="password"
                  />
                  <button class="login__btn">Войти</button>
                  <a class="forget__link" href="">Я забыл пароль</a>
                </form>
              </div>
            </div>
          </div>

          <div class="right">
            <div class="img">
              <img src="img/registration__page/surgery.jpg" alt="surgery" />
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="js/jq/jquery.js"></script>
    <script src="js/slick.min.js"></script>
    <script src="js/swiper-bundle.min.js"></script>
    <script src="js/script.js"></script>
  </body>
</html>
